<?xml version="1.0" encoding="UTF-8"?>
<root>
   <commands>
		<command title="Informations système">
			<value>systeminfo</value>
			<label>Informations de configuration du système</label>
            <alt>
    			<options>
    				<option format="BUTTON">
    					<value>/?</value>
						<label>Aide</label>
                    </option>
                </options>                            
            </alt>
            <alt>
				<options>
					<option format="SYSNAME">
						<value>/S</value>
						<label>Système</label>
						<alt>
							<options>
								<option format="USERNAME">
									<value>/U</value>
									<label>Utilisateur</label>
									<alt>
										<options>
											<option format="PASSWORD">
												<value>/P</value>
												<label>Mot de passe</label>
											</option>
										</options>
									</alt>
								</option>
							</options>
						</alt>
					</option>
					<alt>
						<options>
							<option format="LIST">
								<value>/FO</value>
								<label>Format</label>
								<list>
									<item>TABLE</item>
									<item>LIST</item>
									<item>CSV</item>
								</list>
								<alt>
									<options>
										<option format="CHECKBOX">
											<value>/NH</value>
											<label>Pas d'en-tête</label>
										</option>
									</options>
								</alt>
							</option>
						</options>
					</alt>					
				</options>
            </alt>
      </command>
		<command title="Hello">
		</command>
		<command title="Good bye">
		</command>
   </commands>
</root>
